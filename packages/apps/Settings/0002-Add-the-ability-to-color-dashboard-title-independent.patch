From 64a815abb832b854dc0d6fb33e70d93391825c9a Mon Sep 17 00:00:00 2001
From: camcory <camcory1@gmail.com>
Date: Tue, 11 Aug 2015 12:34:57 -0400
Subject: [PATCH 2/2] Add the ability to color dashboard title independently

Conflicts:
	res/values/custom_colors.xml
---
 res/layout/dashboard_category.xml |    2 +-
 res/values/custom_colors.xml      |    5 ++++-
 res/values/styles.xml             |    5 +++++
 3 files changed, 10 insertions(+), 2 deletions(-)

diff --git a/res/layout/dashboard_category.xml b/res/layout/dashboard_category.xml
index 1ceeebf..464b55d 100644
--- a/res/layout/dashboard_category.xml
+++ b/res/layout/dashboard_category.xml
@@ -32,7 +32,7 @@
             android:singleLine="true"
             android:ellipsize="marquee"
             android:gravity="center_vertical"
-            android:textAppearance="@style/TextAppearance.CategoryTitle"
+            android:textAppearance="@style/TextAppearance.CategoryTitleText"
             android:textAlignment="viewStart"
             />
 
diff --git a/res/values/custom_colors.xml b/res/values/custom_colors.xml
index 81a9578..c37fef7 100644
--- a/res/values/custom_colors.xml
+++ b/res/values/custom_colors.xml
@@ -38,4 +38,7 @@
     <color name="ownerinfo_divider_color">#ff404040</color>
     <!-- Installed app details -->
     <color name="security_settings_billing_desc_color">#ffffb060</color>
-</resources> 
+    <!-- Dashboard category title text color -->
+    <color name="dashboard_category_title_text">@color/theme_accent</color>
+</resources>
+
diff --git a/res/values/styles.xml b/res/values/styles.xml
index 65ab16a..4627966 100644
--- a/res/values/styles.xml
+++ b/res/values/styles.xml
@@ -330,6 +330,11 @@
         <item name="android:textStyle">bold</item>
     </style>
 
+    <style name="TextAppearance.CategoryTitleText" parent="@android:style/TextAppearance.Material.Small">
+        <item name="android:textColor">@color/dashboard_category_title_text</item>
+        <item name="android:textStyle">bold</item>
+    </style>
+
     <style name="TextAppearance.TileTitle" parent="@android:style/TextAppearance.Material.Medium">
     </style>
 
